<!DOCTYPE html>
<html lang="pt-br">
  <%- include('partials/head.ejs') %>
<body>

  <h1><%= title %></h1>

  <%- include('partials/navbar.ejs') %>

  <% if (typeof message !== 'undefined') { %>
    <%= message %>
  <% } %>

  <form action="/registerStudent/add" method="POST">
    <div>
      <label>Nome</label>
      <input type="text" name="name" placeholder="Digite o seu nome">
    </div>
    <div>
      <label>Série</label>
      <input type="text" name="serie" placeholder="Digite a sua série">
    </div>
    <div>
      <label>Média</label>
      <input type="text" name="media" placeholder="Digite a sua média">
    </div>

    <button type="submit">Cadastrar</button>
  </form>

  <%- include('partials/foot.ejs') %>
  
</body>
</html>