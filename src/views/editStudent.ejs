<!DOCTYPE html>
<html lang="pt-br">
  <%- include('partials/head.ejs') %>
<body>

  <h1><%= title %></h1>

  <%- include('partials/navbar.ejs') %>

  <% if (typeof message !== 'undefined') { %>
    <%= message %>
  <% } %>

  <form action="/editStudent/<%= user._id %>" method="POST">
    <div>
      <label>Nome</label>
      <input type="text" name="name" placeholder="Digite o seu nome" value="<%= user.name %>">
    </div>
    <div>
      <label>Série</label>
      <input type="text" name="serie" placeholder="Digite a sua série" value="<%= user.serie %>">
    </div>
    <div>
      <label>Média</label>
      <input type="text" name="media" placeholder="Digite a sua média" value="<%= user.media %>">
    </div>
    <button type="submit">Editar</button>
  </form>

  <%- include('partials/foot.ejs') %>
  
</body>
</html>